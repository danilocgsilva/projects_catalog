{% extends 'base.html.twig' %}

{% block title %}RepositoryAddress index{% endblock %}

{% block body %}
    <h1>RepositoryAddress index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Address</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for repository_address in repository_addresses %}
            <tr>
                <td>{{ repository_address.id }}</td>
                <td>{{ repository_address.address }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_repository_address_show', {'id': repository_address.id}) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('app_repository_address_edit', {'id': repository_address.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_repository_address_new') }}">Create new</a>
{% endblock %}
