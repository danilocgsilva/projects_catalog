{% extends 'base.html.twig' %}

{% block title %}Environment index{% endblock %}

{% block body %}
    <h1>Environment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for environment in environments %}
            <tr>
                <td>{{ environment.id }}</td>
                <td>{{ environment.name }}</td>
                <td>{{ environment.description }}</td>
                <td>
                    <a href="{{ path('app_environment_show', {'id': environment.id}) }}">show</a>
                    <a href="{{ path('app_environment_edit', {'id': environment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_environment_new') }}">Create new</a>
{% endblock %}
